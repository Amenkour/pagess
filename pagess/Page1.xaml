<Page x:Class="pagess.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pagess"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">
    
     
    <Grid>
        <StackPanel>
            <Label Content="Vorname:" HorizontalAlignment="Left" Margin="20,10,0,0"/>
            <TextBox x:Name="txtBox_Vorname"/>
            <Label Content="Nachname:" HorizontalAlignment="Left" Margin="20,10,0,0"/>
            <TextBox x:Name="txtBox_Nachname"/>
            <Label Content="Passwort:" HorizontalAlignment="Left" Margin="20,10,0,0"/>
            <TextBox x:Name="txtBox_Passwort"/>
            <Label Content="Widerholen Sie das Passwort:" HorizontalAlignment="Left" Margin="20,10,0,0"/>
            <TextBox x:Name="txtBox_WidPasswort"/>
        </StackPanel>
    </Grid>
</Page>
